@model IEnumerable<task3MVC.Models.information>

@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>

<p>
    @using (@Html.BeginForm("Index", "information", FormMethod.Post))
    {
        <b>Search By:</b>
        @Html.RadioButton("searchBy", "First Name", true) <text>Name</text>
        @Html.RadioButton("searchBy", "Jop Titel") <text>Jop Titel</text> 
        @Html.RadioButton("searchBy", "Email", true) <text>Email</text><br />
        @Html.TextBox("search")
        <input type="submit" value="search" />
    }
</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>

            @Html.DisplayNameFor(model => model.First_Name)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Last_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JopTitel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imges)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.CV)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.First_Name)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Last_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JopTitel)
            </td>
            <td>
                <div>
                    @if (item.Gender == null)
                    {
                        <span>Not specified</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.GenderDisplay)
                    }
                </div>
            </td>
           

            <td>
                <img alt="" src="~/Imges/@item.Imges" style="height:100px;width:100px;" />

            </td>

            <td>
                @*@Html.DisplayFor(modelItem => item.CV)*@
                @*<a download="downlod" href="@Model"></a>*@
                @*@Html.ActionLink("Downlod", "CV", new { id = item.CV , download="down" })*@
                <a href="~/CV/@item.CV" download>download</a>

            </td>


             <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>

        </tr>
    }

</table>
